<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/invoice_detail_txtContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/invoice_detail_txtView"
        android:clickable="false"
        android:ems="10">
		
    </EditText>

    <TextView
        android:id="@+id/invoice_detail_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/invoice_detail_txtContent"
        android:layout_alignBottom="@+id/invoice_detail_txtContent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="19dp"
        android:text="Label"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>